{% layout settings.customer_layout %}

<div id="account_reset_form" class="account_section">
	<h4>Reset account password</h4>

	<p class="note">Enter a new password for <b>{{ email }}</b></p>

	{% form 'reset_customer_password' %}
		<div class="clearfix form-horizontal">
			{% if form.posted_successfully? %}
				<p class="alert alert-success">Success!</p>
			{% else %}
				{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}
			{% endif %}

			<div class="form-group">
				<label for="email" class="large col-sm-4">Password</label>
				<div class="col-sm-4">
					<input class="form-control" type="password" value="" name="customer[password]" id="customer_password" size="16" />
				</div>
			</div>

			<div class="form-group">
				<label for="email" class="large col-sm-4">Password Confirmation</label>
				<div class="col-sm-4">
					<input class="form-control" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="16" />
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4 col-sm-offset-4">
					<button class="btn" type="submit">Reset Password</button>
				</div>
			</div>
		</div>
	{% endform %}
</div>

<script>
jQuery(function($){
	$(document).ready(function() {
		$('#account_reset_form form').formValidation();
	});
});
</script>